# Clouptimizer Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
CLOUPTIMIZER_ENV=production
CLOUPTIMIZER_DEBUG=false
CLOUPTIMIZER_LOG_LEVEL=INFO
CLOUPTIMIZER_MAX_WORKERS=10
CLOUPTIMIZER_BATCH_SIZE=100

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=60
CORS_ORIGINS=*

# AWS Configuration
AWS_PROFILE=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_REGION=us-east-1
AWS_ASSUME_ROLE_ARN=

# Azure Configuration
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=

# GCP Configuration
GCP_PROJECT_ID=
GCP_CREDENTIALS_PATH=/app/credentials/gcp.json
GCP_SERVICE_ACCOUNT_EMAIL=

# Database Configuration
DATABASE_URL=postgresql://clouptimizer:changeme@localhost:5432/clouptimizer
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080
DATADOG_ENABLED=false
DATADOG_API_KEY=

# Notifications
NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
FROM_EMAIL=noreply@clouptimizer.com
TO_EMAILS=admin@example.com
SLACK_WEBHOOK=
TEAMS_WEBHOOK=

# Reporting
REPORT_OUTPUT_DIR=/app/reports
REPORT_FORMATS=json,html,csv
REPORT_RETENTION_DAYS=90

# Optimization Settings
OPTIMIZATION_DRY_RUN=true
OPTIMIZATION_AUTO_APPLY=false
OPTIMIZATION_MIN_SAVINGS=10.0
OPTIMIZATION_CONFIDENCE_THRESHOLD=0.8

# Logging
LOG_FILE=/app/logs/clouptimizer.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_STRUCTURED=true
AUDIT_LOG_FILE=/app/logs/audit.log

# Sentry Error Tracking (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
FEATURE_AWS_ENABLED=true
FEATURE_AZURE_ENABLED=true
FEATURE_GCP_ENABLED=true
FEATURE_CACHE_ENABLED=true
FEATURE_DATABASE_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=false